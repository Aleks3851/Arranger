<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:background="@color/colorPrimary"
    android:layout_height="wrap_content"
    android:paddingBottom="50dp">

    <ImageView
        android:id="@+id/user_card_image"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:id="@+id/user_card_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/user_card_image">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Имя: "
            android:textSize="25sp"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/user_card_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/colorPrimaryLight"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_card_powork_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/user_card_name_layout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Место работы: "
            android:textSize="25sp"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/user_card_powork"
            android:layout_width="match_parent"
            android:textSize="25sp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryLight"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_card_department_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/user_card_powork_layout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Отдел: "
            android:textSize="25sp"

            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/user_card_department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/colorPrimaryLight"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_card_post_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/user_card_department_layout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Должность: "
            android:textSize="25sp"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/user_card_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/colorPrimaryLight"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>